<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find scarab_control)/config/scarab_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/scarab" args="br_arm_joint_position_controller 
    bl_arm_joint_position_controller fr_arm_joint_position_controller fl_arm_joint_position_controller br_wheel_joint_velocity_controller bl_wheel_joint_velocity_controller fr_wheel_joint_velocity_controller fl_wheel_joint_velocity_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/scarab/joint_states" />
  </node>

</launch>